<div class="jumbotron">
  <div class="row">
    <div class="col-md-12 accountPage">
      <h1>Signup</h1>
      <br>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |error| %>
          <p class = "text-danger"><%= error %></p>
        <% end %>
      <% end %>

      <%= form_for(@user, url: signup_path) do |f|%>
      <div class="formContent">
        <p>
          <%= f.label(:first_name) %>
          <%= f.text_field(:firstname, autofocus: true) %>
        </p>
        <p>
          <%= f.label(:last_name) %>
          <%= f.text_field(:lastname) %>
        </p>
        <p>
          <%= f.label(:email) %>
          <%= f.text_field(:email) %>
        </p>
        <p>
          <%= f.label(:username) %>
          <%= f.text_field(:username) %>
        </p>
        <p>
          <%= f.label(:password) %>
          <%= f.password_field(:password) %>
        </p>
      </div>
      <p>
        <%= f.submit("Signup", class: "btn btn-primary") %>
      </p>
        <%= link_to "Have an account already? Login here", login_path %>
      <% end %>
    </div>
  </div>
</div>

