<div class="jumbotron">
  <div class="row">
    <div class="col-md-12 accountPage">
      <h2>Reset Password</h2>
      <div class="row">
        <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">

          <%= form_tag(update_password_path, :method=>'post') do %>
          <div class="forgotpass">
            <p>
              <%= text_field_tag(:username, @user.username, readonly: true) %>
            </p>

            <p>
             <%= label_tag(:password, "New Password") %> 
             <%= password_field_tag :password %>
           </p>

           <p>
              <%= label_tag(:password_confirmation, "Confirmation") %> 
              <%= password_field_tag :password_confirmation %>
            </p>
          </div>
        <p>
         <%= submit_tag 'Reset Password', class: "btn btn-large btn-primary" %>
       </p>
       <% end %>

     </div>
   </div>
 </div>
</div>
</div>